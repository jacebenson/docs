<section class="md:flex items-start max-w-screen-xl mx-auto px-8 my-16">
  <div class="md:w-1/3 md:pr-12">
    <header class="text-center">
      <h2 class="{{styles.text.alt.four}} text-2xl font-semibold tracking-tight">Get the Newsletter</h2>
      <p class="text-sm mt-1">Keep up on all that's happening with Tskr!</p>
    </header>
    <form
      class="flex items-center justify-between mt-4 pt-1"
      action="https://example.com"
      method="post"
      name="mc-embedded-subscribe-form"
      target="_blank"
      novalidate
    >
      <input
        type="email"
        value=""
        name="EMAIL"
        class="block border {{styles.border.primary.three}} rounded-l py-2 px-2 w-full"
        id="mce-EMAIL"
        placeholder="your-email@example.com"
      />
      <button
        type="submit"
        value="Subscribe"
        name="subscribe"
        class="block {{styles.background.primary.five}} hover:{{styles.background.primary.four}} transition duration-200 text-white px-4 py-2 border {{styles.border.primary.three}} font-semibold rounded-r"
      >
        Subscribe
      </button>
    </form>
  </div>

  <div class="md:w-1/3 md:px-6 mt-8 md:mt-0">
    <header class="text-center">
      <a href="/stickers" class="hover:underline {{styles.text.alt.four}}">
        <h2 class="{{styles.text.alt.four}} text-2xl font-semibold tracking-tight">Get Some Swag</h2>
      </a>
      <p class="text-sm mt-1">The Tskr logo on shirts, hats and more!</p>
    </header>
    <a href="{{ links.shop.url }}" class="block mt-4 text-center text-2xl tracking-tight {{styles.text.alt.one}} {{styles.background.primary.five}} hover:{{styles.background.primary.four}} transition duration-200 py-3 rounded">{{ links.shop.name }} &rarr;</a>
  </div>

  <div class="md:w-1/3 md:pl-12 mt-8 md:mt-0">
    <header class="text-center">
      <a href="/stickers" class="hover:underline {{styles.text.alt.four}}">
        <h2 class="{{styles.text.alt.four}} text-2xl font-semibold tracking-tight">Get Free Stickers</h2>
      </a>
      <p class="text-sm mt-1">Enter your address for a chance to get some, free!</p>
    </header>
    <div class="mt-3">
      <a href="/stickers" class="flex flex-between block hover:{{styles.background.primary.one}} rounded">
        <div class="w-1/2">
          <img src="/images/stickers.png" alt="{{ meta.siteName }} stickers" />
        </div>
        <div class="w-1/2">
          <img src="/images/stickers.png" alt="{{ meta.siteName }} stickers" class="" />
        </div>
      </a>
    </div>
  </div>
</section>